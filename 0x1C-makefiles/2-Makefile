# Compiler
CC = gcc
# Source files
SRC = $(wildcard *.c)
# Object files
OBJ = $(SRC:.c=.o)
# Name of the executable
NAME = school
# Rule to build the executable
all: $(NAME)
# Rule to build the executable from object files
$(NAME): $(OBJ)
	$(CC) -o $@ $^
#Rule to compile source files into object files
%.o: %.c
	$(CC) -c -o $@ $<
# Clean rule
clean:
	rm -f $(OBJ) $(NAME)
#
